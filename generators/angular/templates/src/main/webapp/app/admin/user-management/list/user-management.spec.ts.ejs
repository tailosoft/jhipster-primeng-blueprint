<%_
const tsKeyId = user.primaryKey.tsSampleValues[0];
_%>
<%_ if (clientTestFrameworkVitest) { _%>
import { afterEach, beforeEach, describe, expect, it, vitest } from 'vitest';
<%_ } _%>
import { ComponentFixture, TestBed, tick } from '@angular/core/testing';
import { of, BehaviorSubject } from 'rxjs';
import { HttpHeaders, HttpResponse } from '@angular/common/http';
import { provideHttpClientTesting } from '@angular/common/http/testing';
import { Confirmation, ConfirmationService, MessageService } from 'primeng/api';
import { ActivatedRoute, Router, provideRouter } from '@angular/router';
<%_ if (enableTranslation) { _%>
import { TranslateModule } from '@ngx-translate/core';
<%_ } _%>
import { Table } from 'primeng/table';

import { AccountService } from 'app/core/auth/account.service';
import { UserManagementService } from '../service/user-management.service';
import { User } from '../user-management.model';

import UserManagement from './user-management';

describe('User Management Component', () => {
    let comp: UserManagement;
    let fixture: ComponentFixture<UserManagement>;
    let service: UserManagementService;
    let confirmationService: ConfirmationService;
    let activatedRoute: ActivatedRoute;
    let router: Router;

    beforeEach(() => {
        TestBed.configureTestingModule({
            imports: [
<%_ if (enableTranslation) { _%>
                TranslateModule.forRoot(),
<%_ } _%>
            ],
            providers: [
                provideHttpClientTesting(),
                provideRouter([]),
                AccountService,
                ConfirmationService,
                MessageService,
                {
                    provide: ActivatedRoute,
                    useValue: { data: of(), queryParams: new BehaviorSubject({}) }
                },
            ],
        });

        fixture = TestBed.createComponent(UserManagement);
        comp = fixture.componentInstance;
        service = TestBed.inject(UserManagementService);
        confirmationService = TestBed.inject(ConfirmationService);
        activatedRoute = TestBed.inject(ActivatedRoute);
        router = TestBed.inject(Router);
        <%= clientTestFramework %>.spyOn(router, 'navigate').mockImplementation(() => Promise.resolve(true));
    });

    it('Should call load all on init', () => {
        // GIVEN
        <%= clientTestFramework %>.spyOn(service, 'query').mockReturnValue(of(new HttpResponse({
            body: [new User(<%- tsKeyId %>)],
            headers: new HttpHeaders({
                'X-Total-Count': '1',
            }),
        }) as any));

        // WHEN
        fixture.detectChanges();

        // THEN
        expect(service.query).toHaveBeenCalled();
        expect(comp.users()[0]).toEqual(expect.objectContaining({ id: <%- tsKeyId %> }));
    });

    it('should load a page', () => {
        // GIVEN
        <%= clientTestFramework %>.spyOn(service, 'query').mockReturnValue(
            of(
                new HttpResponse({
                    body: [new User(<%- tsKeyId %>)],
                    headers: new HttpHeaders({
                        'X-Total-Count': '1',
                    }),
                })
            )
        );

        // WHEN
        fixture.detectChanges();
        (activatedRoute.queryParams as BehaviorSubject<any>).next({ first: 3 });

        // THEN
        expect(service.query).toHaveBeenCalled();
        expect(comp.users()[0]).toEqual(expect.objectContaining({ id: <%- tsKeyId %> }));
    });

    describe('setActive', () => {
        it('should update user and call load all', () => {
            // GIVEN
            const user = new User(<%- tsKeyId %>);
            <%= clientTestFramework %>.spyOn(service, 'query').mockReturnValue(
                of(
                    new HttpResponse({
                        body: [user],
                        headers: new HttpHeaders({
                            'X-Total-Count': '1',
                        }),
                    }),
                ),
            );
            <%= clientTestFramework %>.spyOn(service, 'update').mockReturnValue(of(user));

            // WHEN
            comp.setActive(user, true);

            // THEN
            expect(service.update).toHaveBeenCalledWith({ ...user, activated: true });
            expect(service.query).toHaveBeenCalled();
            expect(comp.users()[0]).toEqual(expect.objectContaining({ id: <%- tsKeyId %> }));
        });
    });

    it('should call delete service using confirmDialog', () => {
        // GIVEN
        <%= clientTestFramework %>.spyOn(service, 'delete').mockReturnValue(of({} as any));
        <%= clientTestFramework %>.spyOn(confirmationService, 'confirm').mockImplementation((confirmation: Confirmation) => {
            if (confirmation.accept) {
                confirmation.accept();
            }
            return confirmationService;
        });

        // WHEN
        comp.delete('testLogin');

        // THEN
        expect(confirmationService.confirm).toHaveBeenCalled();
        expect(service.delete).toHaveBeenCalledWith('testLogin');
    });
});
