@defer (when loggers() && !isLoading()) {
    <div class="entity-list">
        <h2 class="title" id="logs-page-heading" data-cy="logsPageHeading">__jhiTranslateTag__('logs.title')</h2>

<%_ if (applicationTypeGateway && gatewayServicesApiAvailable) { _%>
        <div class="service-select">
            <p-select
                id="routesSelect"
                [options]="serviceOptions"
                [(ngModel)]="selectedService"
                (onChange)="changeService($event)"
                placeholder="Select service"
            ></p-select>
        </div>
<%_ } _%>

        <p>__jhiTranslateTag__('logs.nbloggers', { "total": "loggers()?.length" })</p>

        <div class="filter-section">
            <span>__jhiTranslateTag__('logs.filter')</span>
            <input pInputText type="text" [ngModel]="filter()" (ngModelChange)="filter.set($event)" />
        </div>

        <p-table
            [value]="filteredLoggers() ?? []"
            [tableStyle]="{ 'min-width': '50rem' }"
            styleClass="p-datatable-sm p-datatable-striped"
            aria-describedby="logs-page-heading"
            sortMode="multiple"
        >
            <ng-template #header>
                <tr>
                    <th pSortableColumn="name" scope="col">
                        <span>__jhiTranslateTag__('logs.table.name')</span>
                        <p-sortIcon field="name"></p-sortIcon>
                    </th>
                    <th pSortableColumn="level" scope="col">
                        <span>__jhiTranslateTag__('logs.table.level')</span>
                        <p-sortIcon field="level"></p-sortIcon>
                    </th>
                </tr>
            </ng-template>
            <ng-template #body let-logger>
                <tr>
                    <td>
                        <small>{{ logger.name | slice: 0 : 140 }}</small>
                    </td>
                    <td>
                        <button
                          pButton
                          type="button"
                          (click)="changeLevel(logger.name, 'TRACE')"
                          [class]="logger.level === 'TRACE' ? 'p-button-primary' : 'p-button-secondary'"
                          class="p-button-sm"
                        >
                          TRACE
                        </button>

                        <button
                          pButton
                          type="button"
                          (click)="changeLevel(logger.name, 'DEBUG')"
                          [class]="logger.level === 'DEBUG' ? 'p-button-success' : 'p-button-secondary'"
                          class="p-button-sm"
                        >
                          DEBUG
                        </button>

                        <button
                          pButton
                          type="button"
                          (click)="changeLevel(logger.name, 'INFO')"
                          [class]="logger.level === 'INFO' ? 'p-button-info' : 'p-button-secondary'"
                          class="p-button-sm"
                        >
                          INFO
                        </button>

                        <button
                          pButton
                          type="button"
                          (click)="changeLevel(logger.name, 'WARN')"
                          [class]="logger.level === 'WARN' ? 'p-button-warn' : 'p-button-secondary'"
                          class="p-button-sm"
                        >
                          WARN
                        </button>

                        <button
                          pButton
                          type="button"
                          (click)="changeLevel(logger.name, 'ERROR')"
                          [class]="logger.level === 'ERROR' ? 'p-button-danger' : 'p-button-secondary'"
                          class="p-button-sm"
                        >
                          ERROR
                        </button>

                        <button
                          pButton
                          type="button"
                          (click)="changeLevel(logger.name, 'OFF')"
                          [class]="logger.level === 'OFF' ? 'p-button-contrast' : 'p-button-secondary'"
                          class="p-button-sm"
                        >
                          OFF
                        </button>
                    </td>
                </tr>
            </ng-template>
        </p-table>
    </div>
} @loading {
    <div class="loading-container">
        <p-progressSpinner></p-progressSpinner>
    </div>
}
