@if (allBeans()) {
    <div class="entity-list">
        <h2 class="title" id="configuration-page-heading" data-cy="configurationPageHeading">__jhiTranslateTag__('configuration.title')</h2>

        <div class="filter-section">
            <span>__jhiTranslateTag__('configuration.filter')</span>
            <input pInputText type="text" [(ngModel)]="beansFilter" />
        </div>

        <h3 id="spring-configuration">Spring configuration</h3>

        <p-table
            [value]="beans()"
            [tableStyle]="{ 'min-width': '50rem' }"
            styleClass="p-datatable-striped"
            aria-describedby="spring-configuration"
            sortMode="multiple"
        >
            <ng-template pTemplate="header">
                <tr>
                    <th pSortableColumn="prefix" scope="col" style="width: 40%">
                        <span>__jhiTranslateTag__('configuration.table.prefix')</span>
                        <p-sortIcon field="prefix"></p-sortIcon>
                    </th>
                    <th scope="col" style="width: 60%"><span>__jhiTranslateTag__('configuration.table.properties')</span></th>
                </tr>
            </ng-template>
            <ng-template pTemplate="body" let-bean>
                <tr>
                    <td>
                        <span>{{ bean.prefix }}</span>
                    </td>
                    <td>
                        @for (property of bean.properties | keyvalue; track property.key) {
                            <div class="property-row">
                                <div class="property-key">{{ property.key }}</div>
                                <div class="property-value">
                                    <p-tag severity="secondary">{{ property.value | json }}</p-tag>
                                </div>
                            </div>
                        }
                    </td>
                </tr>
            </ng-template>
        </p-table>

        @for (propertySource of propertySources(); track i; let i = $index) {
            <div class="property-source-section">
                <h4 [id]="'property-source-' + i">
                    <span>{{ propertySource.name }}</span>
                </h4>

                <p-table
                    [value]="propertySource.properties | keyvalue"
                    [tableStyle]="{ 'min-width': '50rem' }"
                    styleClass="p-datatable-sm p-datatable-striped"
                    [attr.aria-describedby]="'property-source-' + i"
                >
                    <ng-template pTemplate="header">
                        <tr>
                            <th scope="col" style="width: 40%">Property</th>
                            <th scope="col" style="width: 60%">Value</th>
                        </tr>
                    </ng-template>
                    <ng-template pTemplate="body" let-property>
                        <tr>
                            <td class="break">{{ property.key }}</td>
                            <td class="break">
                                <p-tag severity="secondary">{{ property.value.value }}</p-tag>
                            </td>
                        </tr>
                    </ng-template>
                </p-table>
            </div>
        }
    </div>
}
