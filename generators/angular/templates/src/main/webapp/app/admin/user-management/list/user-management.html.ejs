<div class="entity-list">
    <h2 class="title" id="page-heading" data-cy="userManagementPageHeading">
        <span>__jhiTranslateTag__('userManagement.home.title')</span>
    </h2>
    <div class="list-buttons">
        <button pButton type="button" id="jh-create-entity" class="jh-create-entity" [routerLink]="['./new']" icon="pi pi-plus" iconPos="left" data-cy="entityCreateButton">
            __jhiTranslateTag__('userManagement.home.createLabel')
        </button>
    </div>

    <div class="list-content">
        <p-table #userTable [value]="users()" [rowTrackBy]="trackId" [lazy]="true" [rows]="itemsPerPage" [totalRecords]="totalItems()" [loading]="isLoading()" sortMode="multiple" [paginator]="true" (onLazyLoad)="onLazyLoadEvent($event)">
            <ng-template pTemplate="header">
                <tr>
                    <th<% if (databaseType !== 'cassandra') { %> pSortableColumn="id"<% } %>>
                        <span>__jhiTranslateTag__('global.field.id')</span>
                        <% if (databaseType !== 'cassandra') { %><p-sortIcon field="id"></p-sortIcon><% } %>
                    </th>
                    <th<% if (databaseType !== 'cassandra') { %> pSortableColumn="login"<% } %>>
                        <span>__jhiTranslateTag__('userManagement.login')</span>
                        <% if (databaseType !== 'cassandra') { %><p-sortIcon field="login"></p-sortIcon><% } %>
                    </th>
                    <th<% if (databaseType !== 'cassandra') { %> pSortableColumn="email"<% } %>>
                        <span>__jhiTranslateTag__('userManagement.email')</span>
                        <% if (databaseType !== 'cassandra') { %><p-sortIcon field="email"></p-sortIcon><% } %>
                    </th>
                    <th><span>__jhiTranslateTag__('userManagement.activated')</span></th>
<%_ if (enableTranslation) { _%>
                    <th<% if (databaseType !== 'cassandra') { %> pSortableColumn="langKey"<% } %>>
                        <span>__jhiTranslateTag__('userManagement.langKey')</span>
                        <% if (databaseType !== 'cassandra') { %><p-sortIcon field="langKey"></p-sortIcon><% } %>
                    </th>
<%_ } _%>
                    <th><span>__jhiTranslateTag__('userManagement.profiles')</span></th>
<%_ if (databaseType !== 'cassandra') { _%>
                    <th pSortableColumn="createdDate">
                        <span>__jhiTranslateTag__('userManagement.createdDate')</span>
                        <p-sortIcon field="createdDate"></p-sortIcon>
                    </th>
                    <th pSortableColumn="lastModifiedBy">
                        <span>__jhiTranslateTag__('userManagement.lastModifiedBy')</span>
                        <p-sortIcon field="lastModifiedBy"></p-sortIcon>
                    </th>
                    <th pSortableColumn="lastModifiedDate">
                        <span>__jhiTranslateTag__('userManagement.lastModifiedDate')</span>
                        <p-sortIcon field="lastModifiedDate"></p-sortIcon>
                    </th>
<%_ } _%>
                    <th style="width: 124px"></th>
                </tr>
            </ng-template>
            <ng-template pTemplate="body" let-user>
                <tr data-cy="entityTable">
                    <td><a [routerLink]="['./', user.login, 'view']">{{ user.id }}</a></td>
                    <td>{{ user.login }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        @if (!user.activated) {
                            <button pButton class="p-button-danger" (click)="setActive(user, true)"
                            >__jhiTranslateTag__('userManagement.deactivated')</button>
                        } @else {
                            <button pButton class="p-button-success" (click)="setActive(user, false)"
                                    [disabled]="currentAccount()?.login === user.login"
                                    >__jhiTranslateTag__('userManagement.activated')</button>
                        }
                    </td>
<%_ if (enableTranslation) { _%>
                    <td>{{ user.langKey }}</td>
<%_ } _%>
                    <td>
                        @for (authority of user.authorities; track $index; let last = $last) {
                            <p-tag severity="info" [value]="authority"></p-tag>{{ last ? '' : ' ' }}
                        }
                    </td>
<%_ if (databaseType !== 'cassandra') { _%>
                    <td>{{ user.createdDate | date: 'dd/MM/yy HH:mm' }}</td>
                    <td>{{ user.lastModifiedBy }}</td>
                    <td>{{ user.lastModifiedDate | date: 'dd/MM/yy HH:mm' }}</td>
<%_ } _%>
                    <td>
                        <div class="btn-group flex-btn-group-container">
                            <a pButton type="button" [routerLink]="['./', user.login!, 'view']" class="p-button-info p-button-icon-only" data-cy="entityDetailsButton">
                              <span class="pi pi-eye"></span>
                            </a>
                            <a pButton type="button" [routerLink]="['./', user.login!, 'edit']" class="p-button-warning p-button-icon-only" data-cy="entityEditButton">
                              <span class="pi pi-pencil"></span>
                            </a>
                            <button pButton type="button" (click)="delete(user.login)" class="p-button-danger p-button-icon-only" data-cy="entityDeleteButton">
                              <span class="pi pi-times"></span>
                            </button>
                        </div>
                    </td>
                </tr>
            </ng-template>
        </p-table>
    </div>
</div>
