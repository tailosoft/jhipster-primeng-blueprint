// For standalone component imports
export const PRIMENG_MODULES = [
  DatePickerModule,
  CheckboxModule,
  SelectModule,
  ToggleSwitchModule,
  InputTextModule,
  TextareaModule,
  MultiSelectModule,
  ButtonModule,
  TableModule,
  ConfirmDialogModule,
  MessageModule,
  TagModule,
  ToastModule,
  TooltipModule,
  FileUploadModule,
];

export function providePrimeNGConfig(): EnvironmentProviders {
  return makeEnvironmentProviders([
    providePrimeNG({
      theme: {
        preset: Aura,
      },
      filterMatchModeOptions: {
        // startsWith and EndsWith are not supported yet server side, so not showing them
        text: [
          // FilterMatchMode.STARTS_WITH,
          FilterMatchMode.CONTAINS,
          FilterMatchMode.NOT_CONTAINS,
          // FilterMatchMode.ENDS_WITH,
          FilterMatchMode.EQUALS,
          FilterMatchMode.NOT_EQUALS,
        ],
        // adding new filters for dateTime
        dateTime: [FilterMatchMode.DATE_BEFORE, FilterMatchMode.DATE_AFTER],
      },
      // TODO add translations here
    }),
    MessageService,
    ConfirmationService,
  ]);
}
