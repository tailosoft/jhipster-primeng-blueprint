<div>
    <div class="d-flex justify-content-center">
        <div class="col-md-8">
            <h1 data-cy="registerTitle">__jhiTranslateTag__('register.title')</h1>

            @if (success()) {
                <p-message severity="success">__jhiTranslateTag__('register.messages.success')</p-message>
            }

            @if (error()) {
                <p-message severity="error">__jhiTranslateTag__('register.messages.error.fail')</p-message>
            }

            @if (errorUserExists()) {
                <p-message severity="error">__jhiTranslateTag__('register.messages.error.userexists')</p-message>
            }

            @if (errorEmailExists()) {
                <p-message severity="error">__jhiTranslateTag__('register.messages.error.emailexists')</p-message>
            }

            @if (doNotMatch()) {
                <p-message severity="error">__jhiTranslateTag__('global.messages.error.dontmatch')</p-message>
            }
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <div class="col-md-8">
            @if (!success()) {
                <form name="form" (ngSubmit)="register()" [formGroup]="registerForm">
                    <div class="mb-3">
                        <label class="form-label" for="login">__jhiTranslateTag__('global.form.username.label')</label>
                        <input
                            type="text"
                            pInputText
                            id="login"
                            name="login"
                            placeholder="__jhiTranslatePipe__('global.form.username.placeholder')"
                            formControlName="login"
                            data-cy="username"
                        />

                        @let loginRef = registerForm.get('login')!;
                        @if (loginRef.invalid && (loginRef.dirty || loginRef.touched)) {
                            <div>
                                @if (loginRef?.errors?.required) {
                                    <small class="p-error">__jhiTranslateTag__('register.messages.validate.login.required')</small>
                                }

                                @if (loginRef?.errors?.minlength) {
                                    <small class="p-error">__jhiTranslateTag__('register.messages.validate.login.minlength')</small>
                                }

                                @if (loginRef?.errors?.maxlength) {
                                    <small class="p-error">__jhiTranslateTag__('register.messages.validate.login.maxlength')</small>
                                }

                                @if (loginRef?.errors?.pattern) {
                                    <small class="p-error">__jhiTranslateTag__('register.messages.validate.login.pattern')</small>
                                }
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="email">__jhiTranslateTag__('global.form.email.label')</label>
                        <input
                            type="email"
                            pInputText
                            id="email"
                            name="email"
                            placeholder="__jhiTranslatePipe__('global.form.email.placeholder')"
                            formControlName="email"
                            data-cy="email"
                        />

                        @let emailRef = registerForm.get('email')!;
                        @if (emailRef.invalid && (emailRef.dirty || emailRef.touched)) {
                            <div>
                                @if (emailRef?.errors?.required) {
                                    <small class="p-error">__jhiTranslateTag__('global.messages.validate.email.required')</small>
                                }

                                @if (emailRef?.errors?.invalid) {
                                    <small class="p-error">__jhiTranslateTag__('global.messages.validate.email.invalid')</small>
                                }

                                @if (emailRef?.errors?.minlength) {
                                    <small class="p-error">__jhiTranslateTag__('global.messages.validate.email.minlength')</small>
                                }

                                @if (emailRef?.errors?.maxlength) {
                                    <small class="p-error">__jhiTranslateTag__('global.messages.validate.email.maxlength')</small>
                                }
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="password">__jhiTranslateTag__('global.form.newpassword.label')</label>
                        <input
                            type="password"
                            pInputText
                            id="password"
                            name="password"
                            placeholder="__jhiTranslatePipe__('global.form.newpassword.placeholder')"
                            formControlName="password"
                            data-cy="firstPassword"
                        />

                        @let passwordRef = registerForm.get('password')!;
                        @if (passwordRef.invalid && (passwordRef.dirty || passwordRef.touched)) {
                            <div>
                                @if (passwordRef?.errors?.required) {
                                    <small class="p-error">__jhiTranslateTag__('global.messages.validate.newpassword.required')</small>
                                }

                                @if (passwordRef?.errors?.minlength) {
                                    <small class="p-error">__jhiTranslateTag__('global.messages.validate.newpassword.minlength')</small>
                                }

                                @if (passwordRef?.errors?.maxlength) {
                                    <small class="p-error">__jhiTranslateTag__('global.messages.validate.newpassword.maxlength')</small>
                                }
                            </div>
                        }

                        <<%= jhiPrefixDashed %>-password-strength-bar [passwordToCheck]="passwordRef.value" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="confirmPassword">__jhiTranslateTag__('global.form.confirmpassword.label')</label>
                        <input
                            type="password"
                            pInputText
                            id="confirmPassword"
                            name="confirmPassword"
                            placeholder="__jhiTranslatePipe__('global.form.confirmpassword.placeholder')"
                            formControlName="confirmPassword"
                            data-cy="secondPassword"
                        />

                        @let confirmPasswordRef = registerForm.get('confirmPassword')!;
                        @if (confirmPasswordRef.invalid && (confirmPasswordRef.dirty || confirmPasswordRef.touched)) {
                            <div>
                                @if (confirmPasswordRef?.errors?.required) {
                                    <small class="p-error">__jhiTranslateTag__('global.messages.validate.confirmpassword.required')</small>
                                }

                                @if (confirmPasswordRef?.errors?.minlength) {
                                    <small class="p-error">__jhiTranslateTag__('global.messages.validate.confirmpassword.minlength')</small>
                                }

                                @if (confirmPasswordRef?.errors?.maxlength) {
                                    <small class="p-error">__jhiTranslateTag__('global.messages.validate.confirmpassword.maxlength')</small>
                                }
                            </div>
                        }
                    </div>

                    <button
                        type="submit"
                        pButton
                        [disabled]="registerForm.invalid"
                        data-cy="submit"
                    >__jhiTranslateTag__('register.form.button')</button>
                </form>
            }

            <p-message severity="warn" class="mt-3">
                <span>__jhiTranslateTag__('global.messages.info.authenticated.prefix')</span>
                <a routerLink="/login">__jhiTranslateTag__('global.messages.info.authenticated.link')</a>
                <span>__jhiTranslateTag__('global.messages.info.authenticated.suffix')</span>
            </p-message>
        </div>
    </div>
</div>