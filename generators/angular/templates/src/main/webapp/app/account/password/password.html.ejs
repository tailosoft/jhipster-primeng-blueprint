<div class="entity-update">
    @if (account) {
    <h2 class="title">__jhiTranslateTag__('password.title', { "username": "account()?.login" })</h2>

    @if (success()) {
        <p-message severity="success" [text]="'password.messages.success' | translate"></p-message>
    }
    @if (error()) {
        <p-message severity="error" [text]="'password.messages.error' | translate"></p-message>
    }
    @if (doNotMatch()) {
        <p-message severity="error" [text]="'global.messages.error.dontmatch' | translate"></p-message>
    }

    <form name="form" (ngSubmit)="changePassword()" [formGroup]="passwordForm">
        <div class="form-grid p-fluid update-content">
            @let currentPasswordRef = passwordForm.get('currentPassword')!;
            <div class="p-field p-grid">
                <label for="currentPassword" class="p-col-12 p-md-2 label-asterisk">__jhiTranslateTag__('global.form.currentpassword.label')</label>
                <div class="p-col-12 p-md-10">
                    <input
                        pInputText
                        type="password"
                        id="currentPassword"
                        name="currentPassword"
                        placeholder="__jhiTranslatePipe__('global.form.currentpassword.placeholder')"
                        formControlName="currentPassword"
                        data-cy="currentPassword"
                    />
                    @if (currentPasswordRef.invalid && (currentPasswordRef.dirty || currentPasswordRef.touched)) {
                        <div class="validation-messages">
                            @if (currentPasswordRef?.errors?.required) {
                                <p-message severity="error" [text]="'global.messages.validate.newpassword.required' | translate"></p-message>
                            }
                        </div>
                    }
                </div>
            </div>

            @let newPasswordRef = passwordForm.get('newPassword')!;
            <div class="p-field p-grid">
                <label for="newPassword" class="p-col-12 p-md-2 label-asterisk">__jhiTranslateTag__('global.form.newpassword.label')</label>
                <div class="p-col-12 p-md-10">
                    <input
                        pInputText
                        type="password"
                        id="newPassword"
                        name="newPassword"
                        placeholder="__jhiTranslatePipe__('global.form.newpassword.placeholder')"
                        formControlName="newPassword"
                        data-cy="newPassword"
                    />
                    @if (newPasswordRef.invalid && (newPasswordRef.dirty || newPasswordRef.touched)) {
                        <div class="validation-messages">
                            @if (newPasswordRef?.errors?.required) {
                                <p-message severity="error" [text]="'global.messages.validate.newpassword.required' | translate"></p-message>
                            }
                            @if (newPasswordRef?.errors?.minlength) {
                                <p-message severity="error" [text]="'global.messages.validate.newpassword.minlength' | translate"></p-message>
                            }
                            @if (newPasswordRef?.errors?.maxlength) {
                                <p-message severity="error" [text]="'global.messages.validate.newpassword.maxlength' | translate"></p-message>
                            }
                        </div>
                    }
                    <<%= jhiPrefixDashed %>-password-strength-bar [passwordToCheck]="newPasswordRef.value" />
                </div>
            </div>

            @let confirmPasswordRef = passwordForm.get('confirmPassword')!;
            <div class="p-field p-grid">
                <label for="confirmPassword" class="p-col-12 p-md-2 label-asterisk">__jhiTranslateTag__('global.form.confirmpassword.label')</label>
                <div class="p-col-12 p-md-10">
                    <input
                        pInputText
                        type="password"
                        id="confirmPassword"
                        name="confirmPassword"
                        placeholder="__jhiTranslatePipe__('global.form.confirmpassword.placeholder')"
                        formControlName="confirmPassword"
                        data-cy="confirmPassword"
                    />
                    @if (confirmPasswordRef.invalid && (confirmPasswordRef.dirty || confirmPasswordRef.touched)) {
                        <div class="validation-messages">
                            @if (confirmPasswordRef?.errors?.required) {
                                <p-message severity="error" [text]="'global.messages.validate.confirmpassword.required' | translate"></p-message>
                            }
                            @if (confirmPasswordRef?.errors?.minlength) {
                                <p-message severity="error" [text]="'global.messages.validate.confirmpassword.minlength' | translate"></p-message>
                            }
                            @if (confirmPasswordRef?.errors?.maxlength) {
                                <p-message severity="error" [text]="'global.messages.validate.confirmpassword.maxlength' | translate"></p-message>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="update-buttons">
            <button
                pButton
                type="submit"
                [disabled]="passwordForm.invalid"
                icon="pi pi-save"
                data-cy="submit"
            >__jhiTranslateTag__('password.form.button')</button>
        </div>
    </form>
    }
</div>
